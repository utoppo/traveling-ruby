name: Linux
on:
  push:
    branches: [ ci ]
  # pull_request:
  #   branches: [ main ]

jobs:

  build-ubuntu-image:
    strategy:
      matrix:
        os: [ubuntu-latest]
      fail-fast: false
    runs-on: ${{ matrix.os }}
    steps:
      - uses: actions/checkout@v3
      - name: "Set up Ruby"
        uses: ruby/setup-ruby@v1
        with:
            version: 3.1.2
      - name: 
        run: |
            docker run --privileged --rm tonistiigi/binfmt --install all
            cd linux
            rake image
            docker images
      - name: test out images
        run: |
            cd linux
            rake
            ls
      - name: 'Upload Artifact- linux arm64'
        uses: actions/upload-artifact@v3
        with:
          name: traveling-ruby-20230504-3.1.2-linux-arm64.tar.gz
          path: traveling-ruby-20230504-3.1.2-linux-arm64.tar.gz
      - name: 'Upload Artifact- linux x86_64'
        uses: actions/upload-artifact@v3
        with:
          name: traveling-ruby-20230504-3.1.2-linux-x86_64.tar.gz
          path: traveling-ruby-20230504-3.1.2-linux-x86_64.tar.gz